@import "~common/stylus/mixin"

.artical-item{
  width:100%;
  height:110px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  background:#fff;
  padding:10px 15px;
  margin-bottom:8px;
  &:last-child{
    margin-bottom:0;
  }
  .artical-item-left{
    width:120px;
    height:90px;
    background-image:url(../../common/image/find/img06.png);
    background-position:center;
    background-size:contain;
    background-repeat:no-repeat;
  }
  .artical-item-right{
    width:calc(100% - 130px);
    height:90px;
    display:flex;
    flex-direction:column;
    justify-content:space-between;
    align-items:center;
    .artical-item-right-top{
      width:100%;
      font-size:14px;
      color:#000;
      font-weight:bold;
      line-height:18px;
      text-align:left;
      overflow: hidden;
      text-overflow: ellipsis;
      -webkit-box-orient: vertical;
      display: -webkit-box;
      -webkit-line-clamp: 2;
    }
    .artical-item-right-bottom{
      width:100%;
      display:flex;
      justify-content:space-between;
      align-items:center;
      font-size:12px;
      color:#999999;
      .artical-item-time{

      }
      .artical-item-num{
        font-size:0;
        .artical-item-num-right{
          float:right;
          display:flex;
          justify-content:space-between;
          align-items:center;
          .artical-item-num-left-left{
            width:13px;
            height:10px;
            background-image:url(../../common/image/find/browse.png);
            background-position:center;
            background-size:contain;
            background-repeat:no-repeat;
            margin-right:5px;
          }
          .artical-item-num-left-right{
            font-size:12px;
          }
        }
