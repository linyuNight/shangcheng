@import "~common/stylus/mixin"

.edit-delete{
  &:last-child{
    .user-select-item{
      margin-bottom:0!important;
    }
  }
  .slider {
    width: 100%;
    height: 110px;
    position: relative;
    user-select: none;

    .content {
      position: absolute;
      left: 0;
      right: 0;
      top: 0;
      bottom: 0;
      background: #fff;
      z-index: 100;
      // 设置过渡动画
      transition: 0.3s;
    }

    .hide-contain {
      position: absolute;
      width: 120px;
      height: 110px;
      right: 0;
      top: 0;
      .edit{
        float:left;
        width: 60px;
        height: 110px;
        color: #fff;
        text-align: center;
        font-size: 20px;
        line-height: 110px;
        background: $yellow;
      }
      .remove{
        float:left;
        width: 60px;
        height: 110px;
        color: #fff;
        text-align: center;
        font-size: 20px;
        line-height: 110px;
        background: $red;
      }
    }
  }
}