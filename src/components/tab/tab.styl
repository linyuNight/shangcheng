@import "~common/stylus/mixin"

.tab{
  bordertop-1px($grey)
  position:fixed;
  bottom:0;
  left:0;
  width:100%;
  height:50px;
  display:flex;
  justify-content:space-between;
  align-items:center;
  z-index:100;
  background:#fff;
  // -webkit-backdrop-filter: blur(10px); /* Safari for macOS & iOS*/
  // backdrop-filter: blur(10px); /* Google Chrome */
  // background: rgba(255, 255, 255, 0.8);
  // background:#fff;
  // .background{
  //   position: absolute
  //   left: 0
  //   top: 0
  //   width: 100%
  //   height: 45px
  //   z-index: 200
  //   opacity: 0.6
  //   filter: blur(20px)
  // }
  .tab-item{
    flex:1;
    height:50px;
    
    .tab-item-pic{
      position:relative;
      margin:7px auto 5px;
      width:20px;
      height:20px;
      background-position:center;
      background-size:contain;
      background-repeat:no-repeat;
      .purchase-num{
        position:absolute;
        left:10px;
        top:-6px;
        display:inline-block;
        background:$red;
        border-radius:9px;
        height:18px;
        line-height:18px;
        padding:0 6px;
        color:#fff;
        font-size:12px;
        transform:scale(.8);
      }
    }
    .tab-item-pic1{
      background-image:url(../../common/image/tab/home.png);
    }
    .tab-item-pic2{
      background-image:url(../../common/image/tab/category.png);
    }
    .tab-item-pic3{
      background-image:url(../../common/image/tab/find.png);
    }
    .tab-item-pic4{
      background-image:url(../../common/image/tab/money.png);
    }
    .tab-item-pic5{
      background-image:url(../../common/image/tab/cart.png);
    }
    .tab-item-text{
      text-align:center;
      font-size:12px;
      color:#424242;
    }
  }
  .router-link-exact-active{
    .tab-item-pic1{
      background-image:url(../../common/image/tab/home2.png);
    }
    .tab-item-pic2{
      background-image:url(../../common/image/tab/category2.png);
    }
    .tab-item-pic3{
      background-image:url(../../common/image/tab/find2.png);
    }
    .tab-item-pic4{
      background-image:url(../../common/image/tab/money2.png);
    }
    .tab-item-pic5{
      background-image:url(../../common/image/tab/cart2.png);
    }
    .tab-item-text{
      color:$red;
    }
  }
}