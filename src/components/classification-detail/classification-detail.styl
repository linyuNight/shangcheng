@import "~common/stylus/mixin"

.classification-detail{
  position:absolute; 
  z-index:200;
  width:100%;
  background:#f2f2f2;
  .goods-search{
    position:fixed;
    left:0;
    top:0;
    width:100%;
    height:50px;
    background:#fff;
    z-index:100;
    .goods-search-content-box{
      .goods-search-content{
        margin:0 auto;
        width:calc(100% - 30px);
        height:50px;
        display:flex;
        justify-content:space-between;
        align-items:center;
        overflow:hidden;
        .goods-search-input-contain{
          position:relative;
          width:100%;
          display:flex;
          justify-content:center;
          align-items:center;
          // transition: width .3s linear;
          .goods-search-input{
            width:100%;
            height:30px;
            border-radius:15px;
            background:#eaebed;
            padding:5px 0 5px 30px;
            font-size:13px;
            color:#999999;
            line-height:20px;
            background-image:url(../../common/image/goods-show/search.png);
            background-position:12px center;
            background-size:13px;
            background-repeat:no-repeat;
          }
          .clear-btn{
            position:absolute;
            right:10px;
            top:6px;
            width:18px;
            height:18px;
            background-image:url(../../common/image/classification/close.png);
            background-position:center;
            background-size:18px;
            background-repeat:no-repeat;
          }
          // .search-btn{
          //   position:absolute;
          //   right:-80px;
          //   top:0;
          //   width:60px;
          //   height:30px;
          // }
        }
      }
    }
  }
  .list-sort-contain{
    position:fixed;
    left:0;
    top:50px;
    width:100%;
    height:30px;
    padding-bottom:4px;
    display:flex;
    align-items:center;
    background:#fff;
    z-index:100;
    .list-sort-left,.list-sort-right{
      flex:1;
      text-align:center;
      line-height:26px;
      .list-sort-left-content{
        display:inline-block;
        vertical-align:center;
        height:20px;
        line-height:20px;
        font-size:13px;
        margin-left:30px;
      }
      .list-sort-right-content{
        display:inline-block;
        vertical-align:center;
        height:20px;
        line-height:20px;
        font-size:13px;
        margin-right:30px;
      }
    }
    .active{
      .list-sort-left-content{
        display:inline-block;
        vertical-align:center;
        height:20px;
        line-height:20px;
        color:$red;
        border-bottom:1px solid $red;
      }
      .list-sort-right-content{
        display:inline-block;
        vertical-align:center;
        height:20px;
        line-height:20px;
        color:$red;
        border-bottom:1px solid $red;
      }
    }
  }
  .goods-list{
    margin-top:85px;
    padding:0 5px;
    .goods-item{
      float:left;
      width:49.2%;
      background:#fff;
      margin-bottom:5px;
      &:nth-child(2n){
        float:right;
      }
      .goods-item-pic{
        width:100%;
        height:180px;
        background:#fff;
        borderbottom-1px($grey);
        background-image:url(../../common/image/classification/img19.png);
        background-position:center;
        background-size:contain;
        background-repeat:no-repeat;
      }
      .goods-item-text{
        width:100%;
        height:44px;
        padding:5px 10px;
        line-height:18px;
        font-size:13px;
        color:#000;
        text-align:left;
        overflow: hidden;
        text-overflow: ellipsis;
        -webkit-box-orient: vertical;
        display: -webkit-box;
        -webkit-line-clamp: 2;
      }
      .goods-item-bottom{
        width:100%;
        height:21px;
        padding:2px 10px 10px 10px;
        display:flex;
        justify-content:space-between;
        align-items:center;
        .goods-item-price{
          font-size:14px;
          color:$red;
        }
        .goods-item-hassale{
          font-size:12px;
          transform:scale(.83)
          color:#999;
        }
      }
    }
  }
}