.swiper-wrapper{
  width:100%;
  height:80px;
}
.visi-box{
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  margin:auto;
  width:80%;
  height:280px;
  overflow: hidden;
  background: #fff;
  z-index: 10000;
  border-radius: 3px;
  font-size:14px;
}
.visi-box-contain{
  position:relative;
  width:100%;
  height:280px;
}
.visi-box-topline{
  position:absolute;
  top:130px;
  left:0;
  width:100%;
  height:1px;
  borderbottom-1px($grey)
}
.visi-box-bottomline{
  position:absolute;
  top:170px;
  left:0;
  width:100%;
  height:1px;
  borderbottom-1px($grey)
}
.visi-box-content{
  position:absolute;
  top:10px;
  padding-top: 120px;
  left:0;
  width:100%;
  height:280px;
  overflow: hidden;
}
.address-pop-top{
  z-index:100;
  borderbottom-1px($grey)
  position: absolute;
  top:0;
  right:0;
  left:0;
  background:#fff;
  width:100%;
  height:40px;
  #goods-canclebtn{
    float:left;
    width:55px;
    height:40px;
    text-align:center;
    line-height:40px; 
    background:none;
    border:none;
    font-size:13px;
    color:$red;
  }
  #goods-closebtn{
    float:right;
    width:55px;
    height:40px;
    text-align:center;
    line-height:40px; 
    background:none;
    border:none;
    font-size:13px;
    color:$red;
  }
}
#pro-city-area {
  extend-click()
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}







.add-address{
  position:absolute; 
  z-index:200;
  width:100%;
  height:100%;
  background:#f2f2f2;
  .imformation-list{
    background:#fff;
    .imformation-item{
      borderbottom-1px($grey)
      width:100%;
      height:50px;
      padding:0 15px;
      display:flex;
      justify-content:space-between;
      align-items:center;
      font-size:13px;
      color:#000;
      .imformation-item-left{
        width:100px;
      }
      .imformation-item-input{
        width:calc(100% - 68px);
      }
    }
  }
  .save-btn-contain{
    width:100%;
    .save-btn{
      margin:45px auto 0;
      width:110px;
      height:40px;
      background:$red;
      text-align:center;
      line-height:40px;
      border-radius:2px;
      color:#fff;
      font-size:16px;
    }
  }
}