@import "~common/stylus/mixin"

.goods-select-menu{
  position: fixed;
  z-index: 10000;
  left:0;
  right:0;
  top:0;
  bottom:0;
  height:100%;
  display: none;
  background: rgba(0,0,0,.7);
  box-sizing: border-box;
}
.swiper-container{
  float:left;
  width:33%;
  height:40px;
  overflow: visible!important;
}
.swiper-container:before{
  content: '';
  position: absolute;
  top: -100px;
  left: 0;
  right: 0;
  bottom: -100px;
}
